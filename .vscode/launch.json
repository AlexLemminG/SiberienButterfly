{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "cmake launch",
            "type": "cppdbg",
            "request": "launch",
            // Resolved by CMake Tools2:
            "program": "${command:cmake.launchTargetPath}",
            "args": ["--setcfg", "librariesRoot", "${command:cmake.getLaunchTargetDirectory}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment":  [ { "name": "ASAN_OPTIONS", "value": "halt_on_error=0" } ],
            "visualizerFile": "${workspaceFolder}/engine/source/combined.natvis",
            "showDisplayString": true
        },
        {
            "type": "luau_dap",
            "request": "attach",
            "name": "Attach to lua"
        }
    ]
}